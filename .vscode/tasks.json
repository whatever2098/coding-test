// .vscode/tasks.json
{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "build with g++",
		"type": "shell",
		"command": "g++",
		"args": [
		  "-g",                // 디버깅 정보 포함
		  "-std=c++17",        // C++ 표준
		  "main.cpp",          // 컴파일 대상
		  "-o", "a.out"        // 출력 파일명
		],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"problemMatcher": ["$gcc"]
	  }
	]
  }
  
  